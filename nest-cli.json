{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.mjml",
        "outDir": "dist/src"
      }
    ],
    "deleteOutDir": true
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "src",
      "entryFile": "entrypoints/api",
      "sourceRoot": "src"
    },
    "worker": {
      "type": "application",
      "root": "src",
      "entryFile": "entrypoints/worker",
      "sourceRoot": "src"
    }
  }
}
